<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

<div class="container my-4 mb-2">
    <h1 class ="mb-2">Cocktail List</h1>
    <div class="pagination justify-content-end mt-2"><%= paginate @cocktails %></div>
    <div class="row font-weight-bold border-top pt-2 border-bottom pb-2">
        <div class="col-2">Image</div>
        <div class="col-2">Name</div>
        <div class="col-2">Glass</div>
    </div>

    <% if @cocktails.any? %>
        <% @cocktails.each do |cocktail| %>
            <div class="row py-2 border-bottom align-items-center">
                <div class="col-2">
                  <img src="<%= cocktail['strDrinkThumb'] %>" alt="<%= cocktail['strDrink'] %>" style="width: 100px; height: auto;">
                </div>
                <div class="col-2"><%= cocktail['strDrink'] %></div>
                <div class="col-2"><%= cocktail['strGlass'] %></div>
            </div>
        <% end %>
    <% else %>
        <div class="row py-3">
            <div class="col text-center">
                <p>No cocktails available currently.</p>
            </div>
        </div>
    <% end %>
    <div class="pagination justify-content-end mt-2"><%= paginate @cocktails %></div>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" ></script>

